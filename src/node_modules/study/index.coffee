State = require "state"
Collection = require "collection"
View = require "view"

d3collection = require "bindings/collection/d3"

module.exports = View.extend
	props:
		studyType: "string"
		area: "string"
		institution: "string"
		startDate: "string"
		endDate: "string"
		gpa: "string"
	collections:
		courses: Collection

	template: require "./template"
	bindings:
		studyType: hook: "studyType"
		area: hook: "area"
		institution: hook: "institution"
		startDate: hook: "startDate"
		endDate: hook: "endDate"
		courses:
			hook: "courses"
			type: d3collection "li", (sel) ->
				sel.text (d) -> d
